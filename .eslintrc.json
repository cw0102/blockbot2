{
  "extends": [
    "./node_modules/gts",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/stylistic"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2023,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "max-len": "off",
    "no-unused-vars": "warn",
    "@typescript-eslint/consistent-type-imports": "warn",
    "linebreak-style": "off"
  },
  "ignorePatterns": ["/dist/**/*.js"],
  "env": {
    "node": true,
    "jest": true
  },
  "plugins": ["unused-imports"]
}
